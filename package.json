{
  "name": "@jackgreen/react-router-view",
  "version": "0.1.0",
  "private": false,
  "main": "dist/index.min.js",
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "files": [
    "src",
    "dist"
  ],
  "peerDependencies": {
    "react": "^16.13.1",
    "react-router-dom": "^5.2.0"
  },
  "scripts": {
    "build": "rollup --config",
    "lint:style": "stylelint 'src/**/*.{vue,htm,html,css,sss,less,scss,sass}'",
    "fix:style": "stylelint 'src/**/*.{vue,htm,html,css,sss,less,scss,sass}' --fix",
    "lint:js": "eslint 'src/**/*.{js,jsx,ts,tsx}'",
    "fix:js": "eslint 'src/**/*.{js,jsx,ts,tsx}' --fix",
    "lint": "npm run lint:js && npm run lint:style",
    "fix": "npm run fix:js && npm run fix:style",
    "prettier": "prettier --write 'src/**/*.{html,js,jsx,ts,tsx,json,css,scss,md}'",
    "format": "npm run prettier && npm run lint"
  },
  "devDependencies": {
    "@babel/core": "^7.10.3",
    "@babel/plugin-proposal-class-properties": "^7.10.1",
    "@babel/plugin-transform-runtime": "^7.10.3",
    "@babel/preset-env": "^7.10.3",
    "@babel/preset-react": "^7.10.1",
    "@rollup/plugin-babel": "^5.0.4",
    "@rollup/plugin-commonjs": "^13.0.0",
    "@rollup/plugin-node-resolve": "^8.1.0",
    "@rollup/plugin-typescript": "^5.0.0",
    "@testing-library/jest-dom": "^4.2.4",
    "@testing-library/react": "^9.3.2",
    "@testing-library/user-event": "^7.1.2",
    "@types/jest": "^24.0.0",
    "@types/node": "^12.0.0",
    "@types/react": "^16.9.0",
    "@types/react-router-dom": "^5.1.5",
    "@typescript-eslint/eslint-plugin": "^3.3.0",
    "@typescript-eslint/parser": "^3.3.0",
    "babel-eslint": "^10.1.0",
    "eslint": "^7.3.1",
    "eslint-config-prettier": "^6.11.0",
    "eslint-config-standard-with-typescript": "^18.0.2",
    "eslint-plugin-import": "^2.21.2",
    "eslint-plugin-jsx-a11y": "^6.3.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-react": "^7.20.0",
    "eslint-plugin-react-hooks": "^4.0.4",
    "eslint-plugin-standard": "^4.0.1",
    "husky": "^4.2.5",
    "lint-staged": "^10.2.11",
    "prettier": "^2.0.5",
    "react": "^16.13.1",
    "react-router-dom": "^5.2.0",
    "rollup": "^2.18.0",
    "rollup-plugin-terser": "^6.1.0",
    "rollup-plugin-typescript2": "^0.27.1",
    "stylelint": "^13.6.1",
    "stylelint-config-prettier": "^8.0.1",
    "stylelint-config-standard": "^20.0.0",
    "stylelint-prettier": "^1.1.2",
    "typescript": "~3.7.2"
  },
  "lint-staged": {
    "src/**/*.{html,js,jsx,ts,tsx,json,css,scss,less,md}": [
      "prettier --write"
    ],
    "src/**/*.{js,jsx,ts,tsx}": [
      "eslint --fix"
    ],
    "src/**/*.{vue,htm,html,css,sss,less,scss,sass}": [
      "stylelint --fix"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
